    <body class="login-img3-body">
        <div class="container">
            
                    <form class="login-form" role="form">
                        <div class="login-wrap">
                            <p class="login-img"><i class="icon_lock_alt"></i></p>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon_profile"></i></span>
                                <input id="txtUsername" type="text" class="form-control" placeholder="Username" autofocus>
                                @*@Html.TextBoxFor(model => model.Usuario, new { id = "email", @class = "form-control", placeholder = "Usuario" })*@
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                                <input id="txtPassword" type="password" class="form-control" placeholder="Password">
                                @*@Html.PasswordFor(model => model.Contrasena, new { id = "password", @class = "form-control", placeholder = "Contraseña" })*@
                            </div>
                            <label class="checkbox">
                                <input type="checkbox" value="remember-me"> Remember me
                                <span class="pull-right"> <a href="#"> Forgot Password?</a></span>
                            </label>
                            <button class="btn btn-primary btn-lg btn-block" onclick="login()">Login</button>
                        </div>
                    </form>
                    
            <div class="text-right">
