<script>
    function login() {
        alert("Hla");
        var urlSave = '@Url.Action("Ingresar", "Login")';
        var _usuario = $("#txtUsername").val();
        var _contrasena = $("#txtPassword").val();

        $.ajax({
            type: "POST",
            url: urlSave,
            data: JSON.stringify({ usuario: _usuario, contrasena : _contrasena  }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
            },
            error: function (result) {
            }
        });
    }
</script>