@model MKT.Logica.Models.DO_Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="img/favicon.png">

    <title>Administración MKT</title>

    <!-- Bootstrap CSS -->
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="@Url.Content("~/css/bootstrap-theme.css")" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="@Url.Content("~/css/elegant-icons-style.css")" rel="stylesheet" />

    <link href="@Url.Content("~/css/font-awesome.css")" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/style-responsive.css")" rel="stylesheet" />

    <script src="@Url.Content("~/js/jquery.js")"></script>


</head>

<body class="login-img3-body">
    <div class="container">
        
        @{
            using (Html.BeginForm("Ingresar", "LogIn", Model, FormMethod.Post, new { @class = "login-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                    <div class="login-wrap">
                        <p class="login-img"><i class="icon_lock_alt"></i></p>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon_profile"></i></span>
                            @*<input id="txtUsername" type="text" class="form-control" placeholder="Username" autofocus>*@
                            @Html.TextBoxFor(model => model.Usuario, new { id = "email", @class = "form-control", placeholder = "Usuario" })
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                            @*<input id="txtPassword" type="password" class="form-control" placeholder="Password">*@
                            @Html.PasswordFor(model => model.Contrasena, new { id = "password", @class = "form-control", placeholder = "Contraseña" })
                        </div>

                        <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                    </div>
            }
        }
    </div>
</body>
</html>

<script>
    function login() {
        alert("Hla");
        var urlSave = '@Url.Action("Ingresar", "Login")';
        var _usuario = $("#txtUsername").val();
        var _contrasena = $("#txtPassword").val();

        $.ajax({
            type: "POST",
            url: urlSave,
            data: JSON.stringify({ usuario: _usuario, contrasena : _contrasena  }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
            },
            error: function (result) {
            }
        });
    }
</script>